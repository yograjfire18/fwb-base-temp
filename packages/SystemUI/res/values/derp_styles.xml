<resources>

    <style name="TextApperance.StatusBar.Lyric" parent="@*android:style/TextAppearance.StatusBar">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <!-- Island notification -->
    <style name="Theme.Island.SystemUI" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="islandBackgroundOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
    </style>

    <!-- Pixel navbar -->
    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">@null</item>
    </style>
</resources>
